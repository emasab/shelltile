<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/org/gnome/shell/extensions/shelltile/" id="org.gnome.shell.extensions.shelltile">

    <key type="b" name="enable-edge-tiling">
        <default>true</default>
        <summary>Enable edge tiling</summary>
        <description>Switch for the edge tiling behavior</description>
    </key>
    <key type="b" name="grouping-edge-tiling">
        <default>true</default>
        <summary>Grouping edge tiling</summary>
        <description>Create groups while edge tiling</description>
    </key>
    <key type="b" name="keep-group-maximized">
        <default>true</default>
        <summary>Keep the window group maximized</summary>
        <description>Enforce the group to take all the available space</description>
    </key>  
     <key type="b" name="mouse-split-percent">
        <default>false</default>
        <summary>Adjust the split percentage with the mouse while tiling</summary>
        <description>Adjust the split percentage with the mouse while tiling</description>
    </key>   
    <key type="i" name="gap-between-windows">
      <default>10</default>
      <summary>Size of the gaps between the windows</summary>
      <description>You can reduce the default size of the gaps between the windows</description>
    </key>
    <key type="i" name="edge-zone-width">
      <default>40</default>
      <summary>Size of active edge tiling zone</summary>
      <description>Expecially useful for multiple monitors users</description>
    </key>    
    <key type="s" name="tile-modifier-key">
      <default>"Ctrl"</default>
      <summary>Key to hold for tiling</summary>
      <description>You can change this modifier key to suit your needs.</description>
    </key>
    <key type="b" name="enable-keybindings">
        <default>true</default>
        <summary>Enable the extension keybindings</summary>
        <description>Enable the extension keybindings</description>
    </key>
    <key name="tile-left" type="as">
      <default><![CDATA[['<Ctrl><Super>Left']]]></default>
      <summary>Tile to the left edge</summary>
      <description>
      </description>
    </key>
    <key name="tile-right" type="as">
      <default><![CDATA[['<Ctrl><Super>Right']]]></default>
      <summary>Tile to the right edge</summary>
      <description>
      </description>
    </key>
    <key name="tile-up" type="as">
      <default><![CDATA[['<Ctrl><Super>Up']]]></default>
      <summary>Tile to the top edge</summary>
      <description>
      </description>
    </key>
    <key name="tile-down" type="as">
      <default><![CDATA[['<Ctrl><Super>Down']]]></default>
      <summary>Tile to the bottom edge</summary>
      <description>
      </description>
    </key>
  </schema>
</schemalist>
